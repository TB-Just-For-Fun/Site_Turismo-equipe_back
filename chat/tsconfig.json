{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",  // ou "CommonJS"
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
